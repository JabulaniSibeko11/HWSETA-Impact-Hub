{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=HWSETA_Impact_Hub_DB;Trusted_Connection=false;TrustServerCertificate=true;MultipleActiveResultSets=true;"
  },

  "Security": {
    "Roles": [
      "Admin",
      "ProgrammeManager",
      "ExecutiveReadOnly",
      "Beneficiary"
    ],

    "Policies": {
      "AdminOnly": [ "Admin" ],
      "AdminManage": [ "Admin", "ProgrammeManager" ],
      "ExecRead": [ "Admin", "ProgrammeManager", "ExecutiveReadOnly" ],
      "BeneficiaryOnly": [ "Beneficiary" ]
    },

    "Registration": {
      "AllowPublicRegistration": false,
      "DefaultRole": "Beneficiary"
    },

    "BootstrapAdmin": {
      "Email": "admin@hwseta.org.za",
      "Password": "ChangeMe!12345",
      "RequireConfirmedEmail": false
    },

    "AdminMenu": [
      {
        "Title": "Dashboard",
        "Controller": "Admin",
        "Action": "Index",
        "Policy": "AdminManage"
      },
      {
        "Title": "User Management",
        "Controller": "AdminUsers",
        "Action": "Create",
        "Policy": "AdminOnly"
      },
      {
        "Title": "Cohorts",
        "Controller": "Cohorts",
        "Action": "Index",
        "Policy": "AdminManage"
      },
      {
        "Title": "Enrollments",
        "Controller": "Enrollments",
        "Action": "Index",
        "Policy": "AdminManage"
      },
      {
        "Title": "Programmes",
        "Controller": "Programmes",
        "Action": "Index",
        "Policy": "AdminManage"
      },
      {
        "Title": "Employers",
        "Controller": "Employers",
        "Action": "Index",
        "Policy": "AdminManage"
      },
      {
        "Title": "Providers",
        "Controller": "Providers",
        "Action": "Index",
        "Policy": "AdminManage"
      },
      {
        "Title": "Beneficiaries",
        "Controller": "Beneficiaries",
        "Action": "Index",
        "Policy": "AdminManage"
      },
      {
        "Title": "Dynamic Forms",
        "Controller": "FormTemplates",
        "Action": "Index",
        "Policy": "AdminManage"
      },
      {
        "Title": "Email Chat",
        "Controller": "EmailChat",
        "Action": "Index",
        "Policy": "AdminManage"
      },
      {
        "Title": "Reporting",
        "Controller": "Reports",
        "Action": "Index",
        "Policy": "ExecRead"
      }
    ]
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*"
}