@model List<HWSETA_Impact_Hub.Domain.Entities.Enrollment>
@{
    ViewData["Title"] = "Enrollments";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Enrollments</h1>
    <a class="btn btn-primary" asp-action="Create">Enroll Beneficiary</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="table-responsive">
    <table id="enrollmentsTable" class="table table-striped table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th>Cohort</th>
                <th>Beneficiary</th>
                <th>Programme</th>
                <th>Provider</th>
                <th>Status</th>
                <th>Start</th>
                <th>Actual End</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
            {
                <tr>
                    <td>@e.Cohort?.CohortCode</td>
                    <td>@($"{e.Beneficiary?.LastName}, {e.Beneficiary?.FirstName}")</td>
                    <td>@e.Cohort?.Programme?.ProgrammeName</td>
                    <td>@e.Cohort?.Provider?.ProviderName</td>
                    <td>@e.CurrentStatus</td>
                    <td>@e.StartDate.ToString("yyyy-MM-dd")</td>
                    <td>@(e.ActualEndDate.HasValue? e.ActualEndDate.Value.ToString("yyyy-MM-dd") : "")</td>
                    <td class="text-nowrap">
                        <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@e.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Styles {
    <link rel="stylesheet"
          href="https://cdn.datatables.net/1.13.8/css/dataTables.bootstrap5.min.css" />
}

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.8/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#enrollmentsTable').DataTable({
                pageLength: 10,
                order: [[5, 'desc']],
                columnDefs: [{ targets: [7], orderable: false }]
            });
        });
    </script>
}