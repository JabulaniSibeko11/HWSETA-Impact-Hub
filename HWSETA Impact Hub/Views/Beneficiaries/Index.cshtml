@* ══ PAGE HEADER ══════════════════════════════════════════════════ *@
<div style="display:flex;align-items:flex-start;justify-content:space-between;margin-bottom:24px;flex-wrap:wrap;gap:14px;">
    <div>
        <div class="hw-page-eyebrow"><i class="bi bi-person-lines-fill me-1"></i>Beneficiary Management</div>
        <h1 class="hw-page-title">All <span>Beneficiaries</span></h1>
        <p class="hw-page-desc">Registered participants across all HWSETA health and social development programmes.</p>
    </div>
    <div style="display:flex;gap:10px;flex-wrap:wrap;align-items:center;margin-top:4px;">
        <a asp-action="DownloadTemplate" class="hw-btn-outline">
            <i class="bi bi-file-earmark-excel"></i> Excel Template
        </a>
        <a asp-action="Upload" class="hw-btn-gold">
            <i class="bi bi-upload"></i> Bulk Upload
        </a>
        <a asp-action="Create" class="hw-btn-primary">
            <i class="bi bi-person-plus"></i> Add Beneficiary
        </a>
    </div>
</div>

@* ══ STAT STRIP ═══════════════════════════════════════════════════ *@
<div class="hw-stat-strip">
    <div class="hw-strip-card">
        <div class="hw-strip-icon dark"><i class="bi bi-people"></i></div>
        <div>
            <div class="hw-strip-val">@Model.Count</div>
            <div class="hw-strip-label">Total Registered</div>
        </div>
    </div>
    <div class="hw-strip-card">
        <div class="hw-strip-icon green"><i class="bi bi-person-check"></i></div>
        <div>
            <div class="hw-strip-val">@Model.Count(b => b.IsActive)</div>
            <div class="hw-strip-label">Active</div>
        </div>
    </div>
    <div class="hw-strip-card">
        <div class="hw-strip-icon red"><i class="bi bi-person-dash"></i></div>
        <div>
            <div class="hw-strip-val">@Model.Count(b => !b.IsActive)</div>
            <div class="hw-strip-label">Inactive</div>
        </div>
    </div>
    <div class="hw-strip-card">
        <div class="hw-strip-icon gold"><i class="bi bi-geo-alt"></i></div>
        <div>
            <div class="hw-strip-val">@Model.Select(b => b.Address?.Province?.Name).Where(p => p != null).Distinct().Count()</div>
            <div class="hw-strip-label">Provinces Covered</div>
        </div>
    </div>
    <div class="hw-strip-card">
        <div class="hw-strip-icon green"><i class="bi bi-calendar-check"></i></div>
        <div>
            <div class="hw-strip-val">@Model.Count(b => b.CreatedOnUtc.Month == DateTime.Now.Month && b.CreatedOnUtc.Year == DateTime.Now.Year)</div>
            <div class="hw-strip-label">Added This Month</div>
        </div>
    </div>
</div>

@* ══ TABLE CARD ═══════════════════════════════════════════════════ *@
<div class="hw-table-card">
    <div class="hw-table-card-head">
        <span class="hw-table-card-title">
            <i class="bi bi-table"></i> Beneficiary Register
        </span>
        <div style="display:flex;gap:8px;">
            <button class="hw-btn-outline" style="font-size:11.5px;padding:6px 12px;" onclick="hwExport('csv')" title="Export CSV">
                <i class="bi bi-filetype-csv"></i> CSV
            </button>
            <button class="hw-btn-outline" style="font-size:11.5px;padding:6px 12px;" onclick="hwExport('excel')" title="Export Excel">
                <i class="bi bi-file-earmark-excel"></i> Excel
            </button>
            <button class="hw-btn-outline" style="font-size:11.5px;padding:6px 12px;" onclick="window.print()" title="Print">
                <i class="bi bi-printer"></i> Print
            </button>
        </div>
    </div>

    <div style="overflow-x:auto;">
        <table id="beneficiariesTable" class="hw-dt">
            <thead>
                <tr>
                    <th>Identifier</th>
                    <th>Name</th>
                    <th>Date of Birth</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>Province</th>
                    <th>Status</th>
                    <th style="width:90px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                {
                    var initials = $"{b.FirstName?.FirstOrDefault()}{b.LastName?.FirstOrDefault()}".ToUpper();

                    <tr>
                        <td>
                            <span class="hw-id-chip">
                                <i class="bi bi-fingerprint"></i>
                                @b.IdentifierType · @b.IdentifierValue
                            </span>
                        </td>
                        <td>
                            <div class="hw-name-cell">
                                <div class="hw-name-av">@initials</div>
                                <span class="hw-name-full">@b.FirstName @b.LastName</span>
                            </div>
                        </td>
                        <td style="white-space:nowrap;font-size:12px;color:var(--hw-muted);font-weight:600;">
                            @b.DateOfBirth.ToString("dd MMM yyyy")
                        </td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(b.Email))
                            {
                                <a href="mailto:@b.Email"
                                   style="color:var(--hw-green);font-size:12px;font-weight:600;text-decoration:none;">
                                    @b.Email
                                </a>
                            }
                            else
                            {
                                <span style="color:var(--hw-border);font-size:12px;">—</span>
                            }
                        </td>
                        <td style="font-size:12px;font-weight:600;white-space:nowrap;">
                            <i class="bi bi-phone" style="color:var(--hw-green);margin-right:4px;"></i>
                            @b.MobileNumber
                        </td>
                        <td>
                            <span class="hw-province-badge">
                                <i class="bi bi-geo-alt-fill"></i>
                                @(b.Address?.Province?.Name ?? "—")
                            </span>
                        </td>
                        <td>
                            @if (b.IsActive)
                            {
                                <span class="hw-status-badge active">Active</span>
                            }
                            else if (!b.IsActive)
                            {
                                <span class="hw-status-badge inactive">Inactive</span>
                            }
                            else
                            {
                               <span class="badge bg-secondary">@b.RegistrationStatus</span>
                            }
                        </td>
                        <td>
                            <div class="hw-row-actions">
                                <a asp-action="Details" asp-route-id="@b.Id"
                                   class="hw-row-btn" title="View details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@b.Id"
                                   class="hw-row-btn" title="Edit beneficiary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button class="hw-row-btn danger" title="Deactivate"
                                        onclick="hwConfirmDeactivate('@b.Id', '@b.FirstName @b.LastName')">
                                    <i class="bi bi-person-dash"></i>
                                </button>
                                <form asp-action="SendInvite" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@b.Id" />
                                    <input type="hidden" name="sendEmail" value="true" />
                                    <input type="hidden" name="sendSms" value="true" />
                                    <button type="submit" class="btn btn-sm btn-primary">
                                        Send
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.print.min.js"></script>

    <script>
        var _hwTable;

        $(document).ready(function () {
            _hwTable = $('#beneficiariesTable').DataTable({
                pageLength:  15,
                lengthMenu: [[10, 15, 25, 50, 100, -1], [10, 15, 25, 50, 100, 'All']],
                order:      [[1, 'asc']],
                columnDefs: [{ targets: [7], orderable: false }],
                dom:        '<"hw-dt-toolbar"lf>t<"hw-dt-foot"ip>',
                buttons:    ['csvHtml5', 'excelHtml5', 'print'],
                language: {
                    search:      '',
                    searchPlaceholder: 'Search beneficiaries…',
                    lengthMenu:  'Show _MENU_ per page',
                    info:        'Showing _START_–_END_ of _TOTAL_ beneficiaries',
                    infoEmpty:   'No beneficiaries found',
                    zeroRecords: 'No matching beneficiaries found',
                    paginate: {
                        previous: '‹',
                        next:     '›'
                    }
                }
            });
        });

        function hwExport(type) {
            if (type === 'csv')   _hwTable.button('.buttons-csv').trigger();
            if (type === 'excel') _hwTable.button('.buttons-excel').trigger();
            if (type === 'print') _hwTable.button('.buttons-print').trigger();
        }

        function hwConfirmDeactivate(id, name) {
            if (typeof hwToast === 'function') {
                hwToast('warning', 'Confirm Action',
                    'Deactivate ' + name + '? Wire up the controller action to confirm.');
            }
        }
    </script>
}
