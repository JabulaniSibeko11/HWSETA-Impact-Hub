@model HWSETA_Impact_Hub.Models.ViewModels.Cohort.CohortCreateVm
@{
    ViewData["Title"] = "Add Cohort";
}

<h1 class="mb-3">Add Cohort</h1>

<form method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="CohortCode" class="form-label">Cohort Code</label>
            <input asp-for="CohortCode" class="form-control" />
            <span asp-validation-for="CohortCode" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="IntakeYear" class="form-label">Intake Year</label>
            <input asp-for="IntakeYear" class="form-control" />
            <span asp-validation-for="IntakeYear" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <div class="form-check mt-4">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label">Active</label>
            </div>
        </div>

        <div class="col-md-6">
            <label asp-for="ProgrammeId" class="form-label">Programme</label>
            <select asp-for="ProgrammeId" asp-items="Model.Programmes" class="form-select">
                <option value="">-- Select programme --</option>
            </select>
            <span asp-validation-for="ProgrammeId" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="FundingTypeId" class="form-label">Funding Type</label>
            <select asp-for="FundingTypeId" asp-items="Model.FundingTypes" class="form-select">
                <option value="">-- Select funding type --</option>
            </select>
            <span asp-validation-for="FundingTypeId" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="ProviderId" class="form-label">Provider</label>
            <select asp-for="ProviderId" asp-items="Model.Providers" class="form-select">
                <option value="">-- Select provider --</option>
            </select>
            <span asp-validation-for="ProviderId" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="EmployerId" class="form-label">Employer (optional)</label>
            <select asp-for="EmployerId" asp-items="Model.Employers" class="form-select">
                <option value="">-- None --</option>
            </select>
            <span asp-validation-for="EmployerId" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="StartDate" class="form-label">Start Date</label>
            <input asp-for="StartDate" type="date" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="PlannedEndDate" class="form-label">Planned End Date</label>
            <input asp-for="PlannedEndDate" type="date" class="form-control" />
            <span asp-validation-for="PlannedEndDate" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Save</button>
        <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}