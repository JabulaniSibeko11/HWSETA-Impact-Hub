@model HWSETA_Impact_Hub.Domain.Entities.Cohort
@{
    ViewData["Title"] = "Cohort Details";
}

<h1 class="mb-3">Cohort Details</h1>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Cohort Code</dt>
            <dd class="col-sm-9">@Model.CohortCode</dd>

            <dt class="col-sm-3">Programme</dt>
            <dd class="col-sm-9">@Model.Programme?.ProgrammeName</dd>

            <dt class="col-sm-3">Qualification Type</dt>
            <dd class="col-sm-9">@Model.Programme?.QualificationType?.Name</dd>

            <dt class="col-sm-3">Provider</dt>
            <dd class="col-sm-9">@Model.Provider?.ProviderName</dd>

            <dt class="col-sm-3">Employer</dt>
            <dd class="col-sm-9">@((Model.Employer == null) ? "-" : $"{Model.Employer.EmployerCode} - {Model.Employer.RegistrationNumber}")</dd>

            <dt class="col-sm-3">Funding Type</dt>
            <dd class="col-sm-9">@Model.FundingType?.Name</dd>

            <dt class="col-sm-3">Intake Year</dt>
            <dd class="col-sm-9">@Model.IntakeYear</dd>

            <dt class="col-sm-3">Dates</dt>
            <dd class="col-sm-9">@Model.StartDate.ToString("yyyy-MM-dd") → @Model.PlannedEndDate.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {

                    <span class="badge bg-secondary">Inactive</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
</div>