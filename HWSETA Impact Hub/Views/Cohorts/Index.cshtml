@model List<HWSETA_Impact_Hub.Domain.Entities.Cohort>
@{
    ViewData["Title"] = "Cohorts";
}

<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.8/css/jquery.dataTables.min.css" />

<style>
    #hw-body, #hw-body * {
        font-family: 'Montserrat','Segoe UI',sans-serif !important;
    }

    .hw-page-eyebrow {
        font-size: 10px;
        font-weight: 700;
        letter-spacing: .12em;
        text-transform: uppercase;
        color: var(--hw-gold-dark);
        margin-bottom: 4px;
    }

    .hw-page-title {
        font-size: 24px;
        font-weight: 800;
        letter-spacing: -.02em;
        color: var(--hw-dark);
        margin: 0;
    }

        .hw-page-title span {
            color: var(--hw-green);
        }

    .hw-page-desc {
        font-size: 13px;
        color: var(--hw-muted);
        margin-top: 5px;
    }

    /* Stat strip */
    .hw-stat-strip {
        display: grid;
        grid-template-columns: repeat(auto-fit,minmax(150px,1fr));
        gap: 14px;
        margin-bottom: 24px;
    }

    .hw-strip-card {
        background: var(--hw-white);
        border: 1.5px solid var(--hw-border);
        border-radius: var(--hw-radius-lg);
        padding: 16px 18px;
        display: flex;
        align-items: center;
        gap: 14px;
        transition: box-shadow .2s,border-color .2s;
    }

        .hw-strip-card:hover {
            box-shadow: var(--hw-shadow-sm);
            border-color: var(--hw-green);
        }

    .hw-strip-icon {
        width: 42px;
        height: 42px;
        border-radius: 11px;
        flex-shrink: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 19px;
    }

        .hw-strip-icon.green {
            background: var(--hw-green-light);
            color: var(--hw-green);
        }

        .hw-strip-icon.gold {
            background: var(--hw-gold-light);
            color: var(--hw-gold-dark);
        }

        .hw-strip-icon.red {
            background: var(--hw-red-light);
            color: var(--hw-red);
        }

        .hw-strip-icon.dark {
            background: #f1f2f5;
            color: var(--hw-dark);
        }

        .hw-strip-icon.blue {
            background: #e0f2fe;
            color: #0369a1;
        }

    .hw-strip-val {
        font-size: 26px;
        font-weight: 800;
        color: var(--hw-dark);
        letter-spacing: -.03em;
        line-height: 1;
    }

    .hw-strip-label {
        font-size: 11px;
        font-weight: 600;
        color: var(--hw-muted);
        margin-top: 3px;
    }

    /* Buttons */
    .hw-btn-primary {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 9px 18px;
        background: var(--hw-green);
        color: #fff;
        border: none;
        border-radius: 8px;
        font-size: 12.5px;
        font-weight: 700;
        font-family: 'Montserrat',sans-serif;
        cursor: pointer;
        text-decoration: none;
        transition: background .2s,box-shadow .2s,transform .15s;
    }

        .hw-btn-primary:hover {
            background: var(--hw-green-dark);
            box-shadow: 0 4px 14px rgba(26,122,60,.3);
            transform: translateY(-1px);
            color: #fff;
        }

    .hw-btn-outline {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        padding: 6px 13px;
        background: transparent;
        color: var(--hw-muted);
        border: 1.5px solid var(--hw-border);
        border-radius: 7px;
        font-size: 11.5px;
        font-weight: 600;
        font-family: 'Montserrat',sans-serif;
        cursor: pointer;
        text-decoration: none;
        transition: border-color .2s,color .2s;
    }

        .hw-btn-outline:hover {
            border-color: var(--hw-green);
            color: var(--hw-green);
        }

    /* Table card */
    .hw-table-card {
        background: var(--hw-white);
        border: 1.5px solid var(--hw-border);
        border-radius: var(--hw-radius-lg);
        overflow: hidden;
    }

    .hw-table-card-head {
        padding: 14px 22px;
        border-bottom: 1px solid var(--hw-border);
        background: var(--hw-offwhite);
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
    }

    .hw-table-card-title {
        font-size: 13.5px;
        font-weight: 700;
        color: var(--hw-dark);
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .hw-table-card-title i {
            color: var(--hw-green);
        }

    /* DataTable */
    .dataTables_wrapper {
        padding: 0;
        font-family: 'Montserrat',sans-serif;
    }

    .hw-dt-toolbar {
        padding: 12px 20px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
        border-bottom: 1px solid var(--hw-border);
    }

    .hw-dt-foot {
        padding: 12px 20px;
        border-top: 1px solid var(--hw-border);
        background: var(--hw-offwhite);
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 10px;
    }

    .dataTables_wrapper .dataTables_filter label,
    .dataTables_wrapper .dataTables_length label {
        font-size: 12px;
        font-weight: 600;
        color: var(--hw-muted);
        font-family: 'Montserrat',sans-serif;
        display: flex;
        align-items: center;
        gap: 8px;
        margin: 0;
    }

    .dataTables_wrapper .dataTables_filter input {
        border: 1.5px solid var(--hw-border);
        border-radius: 8px;
        padding: 7px 12px;
        font-size: 12px;
        font-family: 'Montserrat',sans-serif;
        color: var(--hw-dark);
        outline: none;
        width: 200px;
        transition: border-color .2s,box-shadow .2s,width .3s;
    }

        .dataTables_wrapper .dataTables_filter input:focus {
            border-color: var(--hw-green);
            box-shadow: 0 0 0 3px rgba(26,122,60,.1);
            width: 250px;
        }

    .dataTables_wrapper .dataTables_length select {
        border: 1.5px solid var(--hw-border);
        border-radius: 8px;
        padding: 6px 10px;
        font-size: 12px;
        font-family: 'Montserrat',sans-serif;
        outline: none;
    }

        .dataTables_wrapper .dataTables_length select:focus {
            border-color: var(--hw-green);
        }

    .dataTables_wrapper .dataTables_info {
        font-size: 11.5px;
        font-weight: 600;
        color: var(--hw-muted);
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button {
        border-radius: 7px !important;
        font-size: 11.5px !important;
        font-weight: 600 !important;
        font-family: 'Montserrat',sans-serif !important;
        color: var(--hw-muted) !important;
        border: 1.5px solid transparent !important;
        padding: 5px 10px !important;
        margin: 0 2px !important;
        transition: all .18s !important;
    }

        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: var(--hw-green-light) !important;
            border-color: var(--hw-green) !important;
            color: var(--hw-green) !important;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button.current, .dataTables_wrapper .dataTables_paginate .paginate_button.current:hover {
            background: var(--hw-green) !important;
            border-color: var(--hw-green) !important;
            color: #fff !important;
            box-shadow: 0 2px 8px rgba(26,122,60,.3) !important;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button.disabled, .dataTables_wrapper .dataTables_paginate .paginate_button.disabled:hover {
            color: var(--hw-border) !important;
            background: transparent !important;
            border-color: transparent !important;
        }

    /* Table */
    .hw-dt {
        width: 100% !important;
        border-collapse: collapse;
    }

        .hw-dt thead th {
            padding: 11px 14px;
            font-size: 10.5px;
            font-weight: 700;
            letter-spacing: .08em;
            text-transform: uppercase;
            color: var(--hw-muted);
            border-bottom: 2px solid var(--hw-border);
            background: var(--hw-offwhite);
            text-align: left;
            white-space: nowrap;
            cursor: pointer;
            user-select: none;
            transition: color .18s;
        }

            .hw-dt thead th:hover, .hw-dt thead th.sorting_asc, .hw-dt thead th.sorting_desc {
                color: var(--hw-green);
            }

        .hw-dt tbody tr {
            border-bottom: 1px solid var(--hw-border);
            transition: background .14s;
        }

            .hw-dt tbody tr:last-child {
                border-bottom: none;
            }

            .hw-dt tbody tr:hover {
                background: #f7fdf9;
            }

        .hw-dt td {
            padding: 12px 14px;
            font-size: 12.5px;
            color: var(--hw-dark);
            vertical-align: middle;
        }

    /* Cells */
    .hw-code-chip {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        padding: 3px 10px;
        border-radius: 7px;
        background: var(--hw-green-light);
        border: 1px solid rgba(26,122,60,.2);
        font-size: 11px;
        font-weight: 800;
        color: var(--hw-green);
        letter-spacing: .04em;
        white-space: nowrap;
    }

    .hw-prog-cell {
        font-size: 12px;
        font-weight: 600;
        color: var(--hw-dark);
        max-width: 160px;
        white-space: normal;
        line-height: 1.4;
    }

    .hw-provider-cell {
        font-size: 12px;
        color: var(--hw-muted);
        font-weight: 600;
        max-width: 130px;
        white-space: normal;
    }

    .hw-funding-chip {
        display: inline-flex;
        align-items: center;
        padding: 2px 8px;
        border-radius: 99px;
        background: var(--hw-gold-light);
        color: var(--hw-gold-dark);
        font-size: 10.5px;
        font-weight: 700;
        white-space: nowrap;
    }

    .hw-date-cell {
        font-size: 11.5px;
        color: var(--hw-muted);
        font-weight: 600;
        white-space: nowrap;
    }

    .hw-intake-chip {
        display: inline-flex;
        align-items: center;
        padding: 2px 8px;
        border-radius: 99px;
        background: #e0f2fe;
        color: #0369a1;
        font-size: 10.5px;
        font-weight: 800;
    }

    .hw-status-active {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        padding: 3px 10px;
        border-radius: 99px;
        background: var(--hw-green-light);
        color: var(--hw-green);
        font-size: 10.5px;
        font-weight: 700;
    }

        .hw-status-active::before {
            content: '';
            width: 6px;
            height: 6px;
            border-radius: 50%;
            background: var(--hw-green);
        }

    .hw-status-inactive {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        padding: 3px 10px;
        border-radius: 99px;
        background: #f1f2f5;
        color: var(--hw-muted);
        font-size: 10.5px;
        font-weight: 700;
    }

        .hw-status-inactive::before {
            content: '';
            width: 6px;
            height: 6px;
            border-radius: 50%;
            background: var(--hw-border);
        }
</style>

@if (TempData["Success"] != null)
{
    <script>window.addEventListener('load',function(){if(typeof hwToast==='function')hwToast('success','Done','@Html.Raw(TempData["Success"])')});</script>
}

@* Header *@
<div style="display:flex;align-items:flex-start;justify-content:space-between;margin-bottom:24px;flex-wrap:wrap;gap:14px;">
    <div>
        <div class="hw-page-eyebrow"><i class="bi bi-diagram-3 me-1"></i>Programme Management</div>
        <h1 class="hw-page-title">Training <span>Cohorts</span></h1>
        <p class="hw-page-desc">Manage intake cohorts, providers, and programme delivery schedules.</p>
    </div>
    <a asp-action="Create" class="hw-btn-primary" style="margin-top:4px;">
        <i class="bi bi-plus-lg"></i> Add Cohort
    </a>
</div>

@* Stats *@
<div class="hw-stat-strip">
    <div class="hw-strip-card">
        <div class="hw-strip-icon dark"><i class="bi bi-diagram-3"></i></div>
        <div><div class="hw-strip-val">@Model.Count</div><div class="hw-strip-label">Total Cohorts</div></div>
    </div>
    <div class="hw-strip-card">
        <div class="hw-strip-icon green"><i class="bi bi-broadcast"></i></div>
        <div><div class="hw-strip-val">@Model.Count(c => c.IsActive)</div><div class="hw-strip-label">Active</div></div>
    </div>
    <div class="hw-strip-card">
        <div class="hw-strip-icon red"><i class="bi bi-dash-circle"></i></div>
        <div><div class="hw-strip-val">@Model.Count(c => !c.IsActive)</div><div class="hw-strip-label">Inactive</div></div>
    </div>
    <div class="hw-strip-card">
        <div class="hw-strip-icon blue"><i class="bi bi-calendar3"></i></div>
        <div><div class="hw-strip-val">@Model.Select(c => c.IntakeYear).Distinct().Count()</div><div class="hw-strip-label">Intake Years</div></div>
    </div>
    <div class="hw-strip-card">
        <div class="hw-strip-icon gold"><i class="bi bi-building"></i></div>
        <div><div class="hw-strip-val">@Model.Select(c => c.Provider?.ProviderName).Where(p => p != null).Distinct().Count()</div><div class="hw-strip-label">Providers</div></div>
    </div>
</div>

@* Table *@
<div class="hw-table-card">
    <div class="hw-table-card-head">
        <span class="hw-table-card-title"><i class="bi bi-table"></i> All Cohorts</span>
    </div>
    <div style="overflow-x:auto;">
        <table id="cohortsTable" class="hw-dt">
            <thead>
                <tr>
                    <th>Cohort Code</th>
                    <th>Programme</th>
                    <th>Provider</th>
                    <th>Employer</th>
                    <th>Funding</th>
                    <th>Intake</th>
                    <th>Start Date</th>
                    <th>Planned End</th>
                    <th>Status</th>
                    <th style="width:80px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td><span class="hw-code-chip"><i class="bi bi-diagram-3" style="font-size:10px;"></i> @c.CohortCode</span></td>
                        <td><div class="hw-prog-cell">@c.Programme?.ProgrammeName</div></td>
                        <td><div class="hw-provider-cell">@c.Provider?.ProviderName</div></td>
                        <td style="font-size:11.5px;color:var(--hw-muted);font-weight:600;">@(c.Employer == null ? "—" : c.Employer.EmployerCode)</td>
                        <td><span class="hw-funding-chip">@c.FundingType?.Name</span></td>
                        <td><span class="hw-intake-chip">@c.IntakeYear</span></td>
                        <td><span class="hw-date-cell"><i class="bi bi-calendar-event" style="color:var(--hw-green);margin-right:4px;"></i>@c.StartDate.ToString("dd MMM yyyy")</span></td>
                        <td><span class="hw-date-cell">@c.PlannedEndDate.ToString("dd MMM yyyy")</span></td>
                        <td>
                            @if (c.IsActive)
                            {
                                <span class="hw-status-active">Active</span>
                            }
                            else
                            {
                                <span class="hw-status-inactive">Inactive</span>
                            }
                        </td>
                        <td>
                            <a class="hw-btn-outline" asp-action="Details" asp-route-id="@c.Id" title="View details">
                                <i class="bi bi-eye"></i> View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#cohortsTable').DataTable({
                pageLength: 10,
                lengthMenu: [[10,25,50,100,-1],[10,25,50,100,'All']],
                order: [[6,'desc']],
                columnDefs: [{ targets:[9], orderable:false }],
                dom: '<"hw-dt-toolbar"lf>t<"hw-dt-foot"ip>',
                language: {
                    search:'', searchPlaceholder:'Search cohorts…',
                    lengthMenu:'Show _MENU_ per page',
                    info:'Showing _START_–_END_ of _TOTAL_ cohorts',
                    infoEmpty:'No cohorts found',
                    zeroRecords:'No matching cohorts found',
                    paginate:{ previous:'‹', next:'›' }
                }
            });
        });
    </script>
}
