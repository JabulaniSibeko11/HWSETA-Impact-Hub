@{
    ViewData["Title"] = "Home";
}

<style>
    /* ── Hero ── */
    .hw-hero {
        background: linear-gradient(160deg, var(--hw-green-dark) 0%, var(--hw-green) 65%, #1e8c45 100%);
        border-radius: var(--hw-radius-lg);
        padding: 56px 52px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 32px;
        position: relative;
        overflow: hidden;
        margin-bottom: 32px;
    }

        .hw-hero::before {
            content: '';
            position: absolute;
            right: -60px;
            top: -60px;
            width: 340px;
            height: 340px;
            border-radius: 50%;
            background: rgba(230,176,0,.12);
            pointer-events: none;
        }

        .hw-hero::after {
            content: '';
            position: absolute;
            right: 120px;
            bottom: -80px;
            width: 220px;
            height: 220px;
            border-radius: 50%;
            background: rgba(255,255,255,.06);
            pointer-events: none;
        }

    .hw-hero-content {
        flex: 1;
        position: relative;
        z-index: 1;
    }

    .hw-hero-eyebrow {
        font-size: 11px;
        font-weight: 700;
        letter-spacing: .12em;
        text-transform: uppercase;
        color: var(--hw-gold);
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .hw-hero-eyebrow::before {
            content: '';
            width: 24px;
            height: 2px;
            background: var(--hw-gold);
            border-radius: 99px;
        }

    .hw-hero-title {
        font-size: 38px;
        font-weight: 800;
        color: #fff;
        letter-spacing: -.03em;
        line-height: 1.15;
        margin-bottom: 16px;
    }

        .hw-hero-title span {
            color: var(--hw-gold);
        }

    .hw-hero-desc {
        font-size: 15px;
        color: rgba(255,255,255,.72);
        line-height: 1.7;
        max-width: 480px;
        margin-bottom: 28px;
    }

    .hw-hero-actions {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
    }

    .hw-hero-btn-primary {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background: var(--hw-gold);
        color: var(--hw-green-dark);
        border: none;
        border-radius: 9px;
        font-size: 14px;
        font-weight: 700;
        font-family: inherit;
        cursor: pointer;
        text-decoration: none;
        transition: background .2s, box-shadow .2s, transform .15s;
    }

        .hw-hero-btn-primary:hover {
            background: var(--hw-gold-dark);
            color: #fff;
            box-shadow: 0 4px 18px rgba(230,176,0,.4);
            transform: translateY(-2px);
        }

    .hw-hero-btn-outline {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background: rgba(255,255,255,.12);
        color: #fff;
        border: 1.5px solid rgba(255,255,255,.3);
        border-radius: 9px;
        font-size: 14px;
        font-weight: 600;
        font-family: inherit;
        cursor: pointer;
        text-decoration: none;
        transition: background .2s, border-color .2s;
    }

        .hw-hero-btn-outline:hover {
            background: rgba(255,255,255,.2);
            border-color: rgba(255,255,255,.5);
            color: #fff;
        }

    /* Hero badge cluster */
    .hw-hero-badges {
        display: flex;
        flex-direction: column;
        gap: 12px;
        position: relative;
        z-index: 1;
        flex-shrink: 0;
    }

    .hw-hero-badge {
        background: rgba(255,255,255,.12);
        border: 1px solid rgba(255,255,255,.18);
        border-radius: 12px;
        padding: 16px 20px;
        backdrop-filter: blur(8px);
        min-width: 180px;
    }

    .hw-hero-badge-val {
        font-size: 28px;
        font-weight: 800;
        color: #fff;
        letter-spacing: -.03em;
        line-height: 1;
    }

        .hw-hero-badge-val span {
            font-size: 16px;
            color: var(--hw-gold);
        }

    .hw-hero-badge-label {
        font-size: 12px;
        color: rgba(255,255,255,.55);
        margin-top: 4px;
    }

    /* ── Section heading ── */
    .hw-section-heading {
        font-size: 12px;
        font-weight: 700;
        letter-spacing: .08em;
        text-transform: uppercase;
        color: var(--hw-muted);
        margin: 0 0 16px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .hw-section-heading::after {
            content: '';
            flex: 1;
            height: 1px;
            background: var(--hw-border);
        }

    /* ── Feature cards ── */
    .hw-feature-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 16px;
        margin-bottom: 32px;
    }

    .hw-feature-card {
        background: var(--hw-white);
        border: 1.5px solid var(--hw-border);
        border-radius: var(--hw-radius-lg);
        padding: 24px 20px;
        display: flex;
        flex-direction: column;
        gap: 14px;
        transition: box-shadow .22s, transform .22s, border-color .22s;
        text-decoration: none;
        color: inherit;
        position: relative;
        overflow: hidden;
    }

        .hw-feature-card::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 3px;
            opacity: 0;
            transition: opacity .22s;
        }

        .hw-feature-card.green::after {
            background: var(--hw-green);
        }

        .hw-feature-card.gold::after {
            background: var(--hw-gold);
        }

        .hw-feature-card.red::after {
            background: var(--hw-red);
        }

        .hw-feature-card.dark::after {
            background: var(--hw-dark);
        }

        .hw-feature-card:hover {
            box-shadow: var(--hw-shadow-md);
            transform: translateY(-3px);
        }

            .hw-feature-card:hover::after {
                opacity: 1;
            }

        .hw-feature-card.green:hover {
            border-color: var(--hw-green);
        }

        .hw-feature-card.gold:hover {
            border-color: var(--hw-gold);
        }

        .hw-feature-card.red:hover {
            border-color: var(--hw-red);
        }

        .hw-feature-card.dark:hover {
            border-color: var(--hw-dark);
        }

    .hw-feat-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 22px;
        flex-shrink: 0;
    }

        .hw-feat-icon.green {
            background: var(--hw-green-light);
            color: var(--hw-green);
        }

        .hw-feat-icon.gold {
            background: var(--hw-gold-light);
            color: var(--hw-gold-dark);
        }

        .hw-feat-icon.red {
            background: var(--hw-red-light);
            color: var(--hw-red);
        }

        .hw-feat-icon.dark {
            background: #f1f2f5;
            color: var(--hw-dark);
        }

    .hw-feat-title {
        font-size: 15px;
        font-weight: 700;
        color: var(--hw-dark);
        margin: 0;
    }

    .hw-feat-desc {
        font-size: 13px;
        color: var(--hw-muted);
        line-height: 1.6;
        flex: 1;
        margin: 0;
    }

    .hw-feat-link {
        font-size: 12.5px;
        font-weight: 600;
        color: var(--hw-green);
        display: flex;
        align-items: center;
        gap: 5px;
        transition: gap .2s;
        text-decoration: none;
    }

        .hw-feat-link.gold {
            color: var(--hw-gold-dark);
        }

        .hw-feat-link.red {
            color: var(--hw-red);
        }

        .hw-feat-link.dark {
            color: var(--hw-dark);
        }

        .hw-feat-link:hover {
            gap: 10px;
        }

    /* ── Two-column lower section ── */
    .hw-two-col {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-bottom: 32px;
    }

    @@media (max-width: 900px) {
        .hw-two-col {
            grid-template-columns: 1fr;
        }
    }

    /* ── Info card ── */
    .hw-info-card {
        background: var(--hw-white);
        border: 1.5px solid var(--hw-border);
        border-radius: var(--hw-radius-lg);
        overflow: hidden;
    }

    .hw-info-card-head {
        padding: 16px 20px;
        border-bottom: 1px solid var(--hw-border);
        display: flex;
        align-items: center;
        gap: 8px;
        background: var(--hw-offwhite);
    }

    .hw-info-card-title {
        font-size: 14px;
        font-weight: 700;
        color: var(--hw-dark);
    }

        .hw-info-card-title i {
            color: var(--hw-green);
        }

    .hw-info-card-body {
        padding: 20px;
    }

    /* ── Process timeline ── */
    .hw-timeline {
        display: flex;
        flex-direction: column;
        gap: 0;
    }

    .hw-tl-item {
        display: flex;
        gap: 16px;
        padding-bottom: 20px;
        position: relative;
    }

        .hw-tl-item:last-child {
            padding-bottom: 0;
        }

    .hw-tl-left {
        display: flex;
        flex-direction: column;
        align-items: center;
        flex-shrink: 0;
    }

    .hw-tl-dot {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: var(--hw-green-light);
        color: var(--hw-green);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
        font-weight: 800;
        flex-shrink: 0;
        border: 2px solid var(--hw-green);
    }

        .hw-tl-dot.gold {
            background: var(--hw-gold-light);
            color: var(--hw-gold-dark);
            border-color: var(--hw-gold);
        }

        .hw-tl-dot.red {
            background: var(--hw-red-light);
            color: var(--hw-red);
            border-color: var(--hw-red);
        }

    .hw-tl-line {
        width: 2px;
        flex: 1;
        background: var(--hw-border);
        margin-top: 6px;
        min-height: 20px;
    }

    .hw-tl-item:last-child .hw-tl-line {
        display: none;
    }

    .hw-tl-body {
        padding-top: 4px;
    }

    .hw-tl-title {
        font-size: 13.5px;
        font-weight: 700;
        color: var(--hw-dark);
        margin-bottom: 2px;
    }

    .hw-tl-desc {
        font-size: 12px;
        color: var(--hw-muted);
        line-height: 1.55;
    }

    .hw-tl-tag {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        font-size: 10.5px;
        font-weight: 700;
        letter-spacing: .04em;
        text-transform: uppercase;
        padding: 2px 8px;
        border-radius: 99px;
        margin-top: 5px;
    }

        .hw-tl-tag.green {
            background: var(--hw-green-light);
            color: var(--hw-green);
        }

        .hw-tl-tag.gold {
            background: var(--hw-gold-light);
            color: var(--hw-gold-dark);
        }

        .hw-tl-tag.red {
            background: var(--hw-red-light);
            color: var(--hw-red);
        }

    /* ── Compliance checklist ── */
    .hw-checklist {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .hw-check-item {
        display: flex;
        align-items: flex-start;
        gap: 12px;
        padding: 12px 14px;
        border: 1.5px solid var(--hw-border);
        border-radius: 10px;
        transition: border-color .2s, background .2s;
    }

        .hw-check-item:hover {
            border-color: var(--hw-green);
            background: var(--hw-green-light);
        }

    .hw-check-ico {
        width: 28px;
        height: 28px;
        flex-shrink: 0;
        border-radius: 7px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
    }

        .hw-check-ico.green {
            background: var(--hw-green-light);
            color: var(--hw-green);
        }

        .hw-check-ico.gold {
            background: var(--hw-gold-light);
            color: var(--hw-gold-dark);
        }

        .hw-check-ico.red {
            background: var(--hw-red-light);
            color: var(--hw-red);
        }

    .hw-check-title {
        font-size: 13px;
        font-weight: 700;
        color: var(--hw-dark);
        margin-bottom: 1px;
    }

    .hw-check-desc {
        font-size: 11.5px;
        color: var(--hw-muted);
        line-height: 1.5;
    }

    /* ── CTA Banner ── */
    .hw-cta-banner {
        background: var(--hw-gold-light);
        border: 1.5px solid #f0d060;
        border-radius: var(--hw-radius-lg);
        padding: 28px 32px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 20px;
        flex-wrap: wrap;
    }

    .hw-cta-icon {
        width: 48px;
        height: 48px;
        flex-shrink: 0;
        background: var(--hw-gold);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 22px;
        color: var(--hw-green-dark);
    }

    .hw-cta-text {
    }

    .hw-cta-title {
        font-size: 16px;
        font-weight: 800;
        color: var(--hw-dark);
        margin-bottom: 3px;
    }

    .hw-cta-desc {
        font-size: 13px;
        color: var(--hw-muted);
    }

    .hw-cta-actions {
        display: flex;
        gap: 10px;
        flex-shrink: 0;
    }

    .hw-btn-gold {
        display: inline-flex;
        align-items: center;
        gap: 7px;
        padding: 10px 20px;
        background: var(--hw-gold);
        color: var(--hw-green-dark);
        border: none;
        border-radius: 8px;
        font-size: 13px;
        font-weight: 700;
        font-family: inherit;
        cursor: pointer;
        text-decoration: none;
        transition: background .2s, box-shadow .2s, transform .15s;
    }

        .hw-btn-gold:hover {
            background: var(--hw-gold-dark);
            color: #fff;
            box-shadow: 0 4px 14px rgba(230,176,0,.35);
            transform: translateY(-1px);
        }

    .hw-btn-outline-dark {
        display: inline-flex;
        align-items: center;
        gap: 7px;
        padding: 10px 20px;
        background: transparent;
        color: var(--hw-dark);
        border: 1.5px solid var(--hw-border);
        border-radius: 8px;
        font-size: 13px;
        font-weight: 600;
        font-family: inherit;
        cursor: pointer;
        text-decoration: none;
        transition: border-color .2s, background .2s;
    }

        .hw-btn-outline-dark:hover {
            border-color: var(--hw-dark);
            background: var(--hw-offwhite);
            color: var(--hw-dark);
        }

    @@media (max-width: 768px) {
        .hw-hero {
            flex-direction: column;
            padding: 32px 24px;
        }

        .hw-hero-title {
            font-size: 26px;
        }

        .hw-hero-badges {
            flex-direction: row;
            flex-wrap: wrap;
        }

        .hw-hero-badge {
            min-width: 140px;
        }

        .hw-feature-grid {
            grid-template-columns: 1fr 1fr;
        }
    }

    @@media (max-width: 480px) {
        .hw-feature-grid {
            grid-template-columns: 1fr;
        }

        .hw-cta-banner {
            flex-direction: column;
        }
    }
</style>

@* ══ HERO ══════════════════════════════════════════════════════ *@
<div class="hw-hero">
    <div class="hw-hero-content">
        <div class="hw-hero-eyebrow">HWSETA Impact Hub</div>
        <h1 class="hw-hero-title">
            Beneficiary Monitoring<br />
            <span>Made Simple.</span>
        </h1>
        <p class="hw-hero-desc">
            A secure, web-based platform for tracking National Skills Development Plan 2030
            beneficiaries — from enrolment through training to proof of completion.
        </p>
        <div class="hw-hero-actions">
            @if (User?.Identity?.IsAuthenticated == true)
            {
                <a asp-controller="Admin" asp-action="Index" class="hw-hero-btn-primary">
                    <i class="bi bi-grid-1x2"></i> Go to Dashboard
                </a>
                <a asp-controller="Beneficiaries" asp-action="Index" class="hw-hero-btn-outline">
                    <i class="bi bi-people"></i> View Beneficiaries
                </a>
            }
            else
            {
                <a asp-area="Identity" asp-page="/Account/Login" class="hw-hero-btn-primary">
                    <i class="bi bi-box-arrow-in-right"></i> Sign In
                </a>
                <a asp-area="Identity" asp-page="/Account/Register" class="hw-hero-btn-outline">
                    <i class="bi bi-person-plus"></i> Register
                </a>
            }
        </div>
    </div>

    <div class="hw-hero-badges">
        <div class="hw-hero-badge">
            <div class="hw-hero-badge-val">NSDP <span>2030</span></div>
            <div class="hw-hero-badge-label">Skills Development Plan</div>
        </div>
        <div class="hw-hero-badge">
            <div class="hw-hero-badge-val">9 <span>Provinces</span></div>
            <div class="hw-hero-badge-label">Geographic Coverage</div>
        </div>
        <div class="hw-hero-badge">
            <div class="hw-hero-badge-val">4 <span>Statuses</span></div>
            <div class="hw-hero-badge-label">Enrolled · Training · Completed · Dropped</div>
        </div>
    </div>
</div>

@* ══ PLATFORM FEATURES ══════════════════════════════════════════ *@
<div class="hw-section-heading">Platform Features</div>
<div class="hw-feature-grid">

    <a asp-controller="Beneficiaries" asp-action="Index" class="hw-feature-card green">
        <div class="hw-feat-icon green"><i class="bi bi-people"></i></div>
        <div>
            <h5 class="hw-feat-title">Beneficiary Management</h5>
            <p class="hw-feat-desc">
                Register, track, and manage beneficiaries across all health and social development programmes with GPS-enabled location capture.
            </p>
        </div>
        <span class="hw-feat-link"><i class="bi bi-arrow-right"></i> Manage Beneficiaries</span>
    </a>

    <a asp-controller="Forms" asp-action="Index" class="hw-feature-card gold">
        <div class="hw-feat-icon gold"><i class="bi bi-ui-checks-grid"></i></div>
        <div>
            <h5 class="hw-feat-title">Dynamic Web Forms</h5>
            <p class="hw-feat-desc">
                Build and publish custom monitoring forms to capture training challenges, outcomes, and iterative feedback directly from beneficiaries.
            </p>
        </div>
        <span class="hw-feat-link gold"><i class="bi bi-arrow-right"></i> Open Forms Builder</span>
    </a>

    <a asp-controller="Chat" asp-action="Index" class="hw-feature-card dark">
        <div class="hw-feat-icon dark"><i class="bi bi-chat-square-text"></i></div>
        <div>
            <h5 class="hw-feat-title">Two-Way Communication</h5>
            <p class="hw-feat-desc">
                Manage interactive email-linked conversations with beneficiaries and project teams to resolve implementation issues early.
            </p>
        </div>
        <span class="hw-feat-link dark"><i class="bi bi-arrow-right"></i> Open Email Chat</span>
    </a>

    <a asp-controller="Reports" asp-action="Index" class="hw-feature-card red">
        <div class="hw-feat-icon red"><i class="bi bi-bar-chart-line"></i></div>
        <div>
            <h5 class="hw-feat-title">Reports &amp; Dashboards</h5>
            <p class="hw-feat-desc">
                Export downloadable tables and view visual dashboards on registrations, programme progress, and post-training outcomes.
            </p>
        </div>
        <span class="hw-feat-link red"><i class="bi bi-arrow-right"></i> View Reports</span>
    </a>

    <a asp-controller="Documents" asp-action="Index" class="hw-feature-card green">
        <div class="hw-feat-icon green"><i class="bi bi-folder2-open"></i></div>
        <div>
            <h5 class="hw-feat-title">Proof of Completion</h5>
            <p class="hw-feat-desc">
                Beneficiaries upload certificates and supporting documents directly. Project teams verify and track completion evidence in one place.
            </p>
        </div>
        <span class="hw-feat-link"><i class="bi bi-arrow-right"></i> Manage Documents</span>
    </a>

    <a asp-controller="Progress" asp-action="Index" class="hw-feature-card gold">
        <div class="hw-feat-icon gold"><i class="bi bi-graph-up-arrow"></i></div>
        <div>
            <h5 class="hw-feat-title">Progress Tracking</h5>
            <p class="hw-feat-desc">
                Monitor every beneficiary's journey — Enrolled, In Training, Dropped Out, or Completed — with a full status history audit trail.
            </p>
        </div>
        <span class="hw-feat-link gold"><i class="bi bi-arrow-right"></i> Track Progress</span>
    </a>

</div>

@* ══ LOWER TWO-COLUMN ════════════════════════════════════════════ *@
<div class="hw-two-col">

    @* Beneficiary Journey *@
    <div class="hw-info-card">
        <div class="hw-info-card-head">
            <div class="hw-info-card-title"><i class="bi bi-signpost-split"></i> Beneficiary Journey</div>
        </div>
        <div class="hw-info-card-body">
            <div class="hw-timeline">
                <div class="hw-tl-item">
                    <div class="hw-tl-left">
                        <div class="hw-tl-dot">1</div>
                        <div class="hw-tl-line"></div>
                    </div>
                    <div class="hw-tl-body">
                        <div class="hw-tl-title">Registration &amp; Enrolment</div>
                        <div class="hw-tl-desc">Beneficiary completes registration form with personal details, GPS location, and programme assignment.</div>
                        <span class="hw-tl-tag green"><i class="bi bi-check-circle"></i> Enrolled</span>
                    </div>
                </div>
                <div class="hw-tl-item">
                    <div class="hw-tl-left">
                        <div class="hw-tl-dot gold">2</div>
                        <div class="hw-tl-line"></div>
                    </div>
                    <div class="hw-tl-body">
                        <div class="hw-tl-title">Active Training</div>
                        <div class="hw-tl-desc">Progress monitored via dynamic forms. Challenges logged and communicated to project teams in real time.</div>
                        <span class="hw-tl-tag gold"><i class="bi bi-hourglass-split"></i> In Training</span>
                    </div>
                </div>
                <div class="hw-tl-item">
                    <div class="hw-tl-left">
                        <div class="hw-tl-dot">3</div>
                        <div class="hw-tl-line"></div>
                    </div>
                    <div class="hw-tl-body">
