@model List<HWSETA_Impact_Hub.Models.ViewModels.Forms.FormTemplateListRowVm>
@{
    ViewData["Title"] = "Dynamic Forms";
}

<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.8/css/jquery.dataTables.min.css" />

<style>
    #hw-body, #hw-body * {
        font-family: 'Montserrat','Segoe UI',sans-serif !important;
    }

    .hw-page-eyebrow {
        font-size: 10px;
        font-weight: 700;
        letter-spacing: .12em;
        text-transform: uppercase;
        color: var(--hw-gold-dark);
        margin-bottom: 4px;
    }

    .hw-page-title {
        font-size: 24px;
        font-weight: 800;
        letter-spacing: -.02em;
        color: var(--hw-dark);
        margin: 0;
    }

        .hw-page-title span {
            color: var(--hw-green);
        }

    .hw-page-desc {
        font-size: 13px;
        color: var(--hw-muted);
        margin-top: 5px;
    }

    /* Stat strip */
    .hw-stat-strip {
        display: grid;
        grid-template-columns: repeat(auto-fit,minmax(150px,1fr));
        gap: 14px;
        margin-bottom: 24px;
    }

    .hw-strip-card {
        background: var(--hw-white);
        border: 1.5px solid var(--hw-border);
        border-radius: var(--hw-radius-lg);
        padding: 16px 18px;
        display: flex;
        align-items: center;
        gap: 14px;
        transition: box-shadow .2s,border-color .2s;
    }

        .hw-strip-card:hover {
            box-shadow: var(--hw-shadow-sm);
            border-color: var(--hw-green);
        }

    .hw-strip-icon {
        width: 42px;
        height: 42px;
        border-radius: 11px;
        flex-shrink: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 19px;
    }

        .hw-strip-icon.green {
            background: var(--hw-green-light);
            color: var(--hw-green);
        }

        .hw-strip-icon.gold {
            background: var(--hw-gold-light);
            color: var(--hw-gold-dark);
        }

        .hw-strip-icon.red {
            background: var(--hw-red-light);
            color: var(--hw-red);
        }

        .hw-strip-icon.dark {
            background: #f1f2f5;
            color: var(--hw-dark);
        }

    .hw-strip-val {
        font-size: 26px;
        font-weight: 800;
        color: var(--hw-dark);
        letter-spacing: -.03em;
        line-height: 1;
    }

    .hw-strip-label {
        font-size: 11px;
        font-weight: 600;
        color: var(--hw-muted);
        margin-top: 3px;
    }

    /* Buttons */
    .hw-btn-primary {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 9px 18px;
        background: var(--hw-green);
        color: #fff;
        border: none;
        border-radius: 8px;
        font-size: 12.5px;
        font-weight: 700;
        font-family: 'Montserrat',sans-serif;
        cursor: pointer;
        text-decoration: none;
        transition: background .2s,box-shadow .2s,transform .15s;
    }

        .hw-btn-primary:hover {
            background: var(--hw-green-dark);
            box-shadow: 0 4px 14px rgba(26,122,60,.3);
            transform: translateY(-1px);
            color: #fff;
        }

    .hw-btn-outline {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 7px 13px;
        background: transparent;
        color: var(--hw-muted);
        border: 1.5px solid var(--hw-border);
        border-radius: 7px;
        font-size: 11.5px;
        font-weight: 600;
        font-family: 'Montserrat',sans-serif;
        cursor: pointer;
        text-decoration: none;
        transition: border-color .2s,color .2s;
    }

        .hw-btn-outline:hover {
            border-color: var(--hw-green);
            color: var(--hw-green);
        }

    .hw-btn-gold {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 7px 13px;
        background: var(--hw-gold);
        color: var(--hw-green-dark);
        border: none;
        border-radius: 7px;
        font-size: 11.5px;
        font-weight: 700;
        font-family: 'Montserrat',sans-serif;
        cursor: pointer;
        text-decoration: none;
        transition: background .2s;
    }

        .hw-btn-gold:hover {
            background: var(--hw-gold-dark);
            color: #fff;
        }

    .hw-btn-dark {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 7px 13px;
        background: var(--hw-dark);
        color: #fff;
        border: none;
        border-radius: 7px;
        font-size: 11.5px;
        font-weight: 600;
        font-family: 'Montserrat',sans-serif;
        cursor: pointer;
        text-decoration: none;
        transition: background .2s;
    }

        .hw-btn-dark:hover {
            background: #111;
            color: #fff;
        }

    .hw-btn-disabled {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 7px 13px;
        background: #f1f2f5;
        color: var(--hw-border);
        border: 1.5px solid var(--hw-border);
        border-radius: 7px;
        font-size: 11.5px;
        font-weight: 600;
        font-family: 'Montserrat',sans-serif;
        cursor: not-allowed;
    }

    /* Table card */
    .hw-table-card {
        background: var(--hw-white);
        border: 1.5px solid var(--hw-border);
        border-radius: var(--hw-radius-lg);
        overflow: hidden;
    }

    .hw-table-card-head {
        padding: 16px 22px;
        border-bottom: 1px solid var(--hw-border);
        background: var(--hw-offwhite);
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
    }

    .hw-table-card-title {
        font-size: 13.5px;
        font-weight: 700;
        color: var(--hw-dark);
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .hw-table-card-title i {
            color: var(--hw-green);
        }

    /* DataTable overrides */
    .dataTables_wrapper {
        padding: 0;
        font-family: 'Montserrat',sans-serif;
    }

    .hw-dt-toolbar {
        padding: 14px 20px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
        border-bottom: 1px solid var(--hw-border);
    }

    .hw-dt-foot {
        padding: 12px 20px;
        border-top: 1px solid var(--hw-border);
        background: var(--hw-offwhite);
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 10px;
    }

    .dataTables_wrapper .dataTables_filter label,
    .dataTables_wrapper .dataTables_length label {
        font-size: 12px;
        font-weight: 600;
        color: var(--hw-muted);
        font-family: 'Montserrat',sans-serif;
        display: flex;
        align-items: center;
        gap: 8px;
        margin: 0;
    }

    .dataTables_wrapper .dataTables_filter input {
        border: 1.5px solid var(--hw-border);
        border-radius: 8px;
        padding: 7px 12px;
        font-size: 12px;
        font-family: 'Montserrat',sans-serif;
        color: var(--hw-dark);
        outline: none;
        width: 220px;
        transition: border-color .2s,box-shadow .2s,width .3s;
    }

        .dataTables_wrapper .dataTables_filter input:focus {
            border-color: var(--hw-green);
            box-shadow: 0 0 0 3px rgba(26,122,60,.1);
            width: 260px;
        }

    .dataTables_wrapper .dataTables_length select {
        border: 1.5px solid var(--hw-border);
        border-radius: 8px;
        padding: 6px 10px;
        font-size: 12px;
        font-family: 'Montserrat',sans-serif;
        outline: none;
        transition: border-color .2s;
    }

        .dataTables_wrapper .dataTables_length select:focus {
            border-color: var(--hw-green);
        }

    .dataTables_wrapper .dataTables_info {
        font-size: 11.5px;
        font-weight: 600;
        color: var(--hw-muted);
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button {
        border-radius: 7px !important;
        font-size: 11.5px !important;
        font-weight: 600 !important;
        font-family: 'Montserrat',sans-serif !important;
        color: var(--hw-muted) !important;
        border: 1.5px solid transparent !important;
        padding: 5px 10px !important;
        margin: 0 2px !important;
        transition: all .18s !important;
    }

        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: var(--hw-green-light) !important;
            border-color: var(--hw-green) !important;
            color: var(--hw-green) !important;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button.current, .dataTables_wrapper .dataTables_paginate .paginate_button.current:hover {
            background: var(--hw-green) !important;
            border-color: var(--hw-green) !important;
            color: #fff !important;
            box-shadow: 0 2px 8px rgba(26,122,60,.3) !important;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button.disabled, .dataTables_wrapper .dataTables_paginate .paginate_button.disabled:hover {
            color: var(--hw-border) !important;
            background: transparent !important;
            border-color: transparent !important;
        }

    /* Table */
    .hw-dt {
        width: 100% !important;
        border-collapse: collapse;
    }

        .hw-dt thead th {
            padding: 11px 14px;
            font-size: 10.5px;
            font-weight: 700;
            letter-spacing: .08em;
            text-transform: uppercase;
            color: var(--hw-muted);
            border-bottom: 2px solid var(--hw-border);
            background: var(--hw-offwhite);
            text-align: left;
            white-space: nowrap;
            cursor: pointer;
            user-select: none;
            transition: color .18s;
        }

            .hw-dt thead th:hover, .hw-dt thead th.sorting_asc, .hw-dt thead th.sorting_desc {
                color: var(--hw-green);
            }

        .hw-dt tbody tr {
            border-bottom: 1px solid var(--hw-border);
            transition: background .14s;
        }

            .hw-dt tbody tr:last-child {
                border-bottom: none;
            }

            .hw-dt tbody tr:hover {
                background: #f7fdf9;
            }

        .hw-dt td {
            padding: 13px 14px;
            font-size: 12.5px;
            color: var(--hw-dark);
            vertical-align: middle;
        }

    /* Title cell */
    .hw-form-title-cell {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .hw-form-av {
        width: 34px;
        height: 34px;
        border-radius: 9px;
        flex-shrink: 0;
        background: linear-gradient(135deg,var(--hw-green),var(--hw-green-dark));
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 13px;
        font-weight: 800;
        color: #fff;
    }

    .hw-form-name {
        font-size: 13px;
        font-weight: 700;
        color: var(--hw-dark);
    }

    /* Status pill */
    .hw-status-pill {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        padding: 3px 9px;
        border-radius: 99px;
        font-size: 10.5px;
        font-weight: 700;
        letter-spacing: .03em;
    }

        .hw-status-pill.draft {
            background: #f1f2f5;
            color: var(--hw-muted);
            border: 1px solid var(--hw-border);
        }

        .hw-status-pill.published {
            background: var(--hw-green-light);
            color: var(--hw-green);
        }

        .hw-status-pill.archived {
            background: var(--hw-red-light);
            color: var(--hw-red);
        }

    /* Active pill */
    .hw-active-yes {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        font-size: 12px;
        font-weight: 700;
        color: var(--hw-green);
    }

    .hw-active-no {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        font-size: 12px;
        font-weight: 600;
        color: var(--hw-muted);
    }

    /* Actions cell */
    .hw-actions {
        display: flex;
        align-items: center;
        gap: 5px;
        flex-wrap: wrap;
    }
</style>

@if (TempData["Success"] != null)
{
    <script>window.addEventListener('load',function(){if(typeof hwToast==='function')hwToast('success','Done','@Html.Raw(TempData["Success"])')});</script>
}
@if (TempData["Error"] != null)
{
    <script>window.addEventListener('load',function(){if(typeof hwToast==='function')hwToast('error','Error','@Html.Raw(TempData["Error"])')});</script>
}

@* Page header *@
<div style="display:flex;align-items:flex-start;justify-content:space-between;margin-bottom:24px;flex-wrap:wrap;gap:14px;">
    <div>
        <div class="hw-page-eyebrow"><i class="bi bi-ui-checks-grid me-1"></i>Form Management</div>
        <h1 class="hw-page-title">Dynamic <span>Forms</span></h1>
        <p class="hw-page-desc">Build, publish and manage monitoring forms for beneficiary data collection.</p>
    </div>
    <a asp-action="Create" class="hw-btn-primary" style="margin-top:4px;">
        <i class="bi bi-plus-lg"></i> Create Form
    </a>
</div>

@* Stat strip *@
<div class="hw-stat-strip">
    <div class="hw-strip-card">
        <div class="hw-strip-icon dark"><i class="bi bi-ui-checks-grid"></i></div>
        <div><div class="hw-strip-val">@Model.Count</div><div class="hw-strip-label">Total Forms</div></div>
    </div>
    <div class="hw-strip-card">
        <div class="hw-strip-icon green"><i class="bi bi-broadcast"></i></div>
        <div><div class="hw-strip-val">@Model.Count(f => f.IsPublished)</div><div class="hw-strip-label">Published</div></div>
    </div>
    <div class="hw-strip-card">
        <div class="hw-strip-icon gold"><i class="bi bi-pencil-square"></i></div>
        <div><div class="hw-strip-val">@Model.Count(f => !f.IsPublished)</div><div class="hw-strip-label">Drafts</div></div>
    </div>
    <div class="hw-strip-card">
        <div class="hw-strip-icon green"><i class="bi bi-check-circle"></i></div>
        <div><div class="hw-strip-val">@Model.Count(f => f.IsActive)</div><div class="hw-strip-label">Active</div></div>
    </div>
</div>

@* Table card *@
<div class="hw-table-card">
    <div class="hw-table-card-head">
        <span class="hw-table-card-title"><i class="bi bi-table"></i> All Forms</span>
    </div>
    <div style="overflow-x:auto;">
        <table id="formsTable" class="hw-dt">
            <thead>
                <tr>
                    <th>Form</th>
                    <th>Status</th>
                    <th>Version</th>
                    <th>Active</th>
                    <th>Created</th>
                    <th style="width:220px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var f in Model)
                {
                    var statusCss = f.Status.ToString()?.ToLower() switch
                    {
                        "published" => "published",
                        "archived" => "archived",
                        _ => "draft"
                    };
                    var statusIcon = f.Status.ToString()?.ToLower() switch
                    {
                        "published" => "bi-broadcast",
                        "archived" => "bi-archive",
                        _ => "bi-pencil-square"
                    };
                    var initials = string.Concat((f.Title ?? "F").Split(' ').Take(2).Select(w => w.Length > 0 ? w[0].ToString().ToUpper() : ""));
                    if (initials.Length == 0) initials = "F";

                    <tr>
                        <td>
                            <div class="hw-form-title-cell">
                                <div class="hw-form-av">@initials</div>
                                <span class="hw-form-name">@f.Title</span>
                            </div>
                        </td>
                        <td>
                            <span class="hw-status-pill @statusCss">
                                <i class="bi @statusIcon"></i> @f.Status
                            </span>
                        </td>
                        <td style="font-size:12px;font-weight:700;color:var(--hw-muted);">
                            <i class="bi bi-layers" style="color:var(--hw-gold-dark);margin-right:3px;"></i>v@f.Version
                        </td>
                        <td>
                            @if (f.IsActive)
                            {
                                <span class="hw-active-yes"><i class="bi bi-check-circle-fill"></i> Active</span>
                            }
                            else
                            {
                                <span class="hw-active-no"><i class="bi bi-dash-circle"></i> Inactive</span>
                            }
                        </td>
                        <td style="font-size:12px;color:var(--hw-muted);font-weight:600;white-space:nowrap;">
                            @f.CreatedOnUtc.ToString("dd MMM yyyy")
                            <div style="font-size:10.5px;color:var(--hw-border);">@f.CreatedOnUtc.ToString("HH:mm")</div>
                        </td>
                        <td>
                            <div class="hw-actions">
                                <a class="hw-btn-outline" asp-action="Builder" asp-route-id="@f.Id" title="Open Builder">
                                    <i class="bi bi-tools"></i> Builder
                                </a>
                                <a class="hw-btn-outline" asp-action="Edit" asp-route-id="@f.Id" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                @if (!string.IsNullOrWhiteSpace(f.PublicToken))
                                {
                                    <a class="hw-btn-dark"
                                       asp-controller="FormSubmissions"
                                       asp-action="ByToken"
                                       asp-route-token="@f.PublicToken"
                                       title="View Submissions">
                                        <i class="bi bi-inbox"></i>
                                    </a>
                                }
                                else
                                {
                                    <span class="hw-btn-disabled" title="Publish form to enable submissions">
                                        <i class="bi bi-inbox"></i>
                                    </span>
                                }
                             
                                @if (f.IsPublished && !string.IsNullOrWhiteSpace(f.PublicToken))
                                {
                                    <a class="hw-btn-gold"
                                       asp-action="SendCenter"
                                       asp-route-id="@f.Id"
                                       title="Send invites / Bulk send">
                                        <i class="bi bi-send"></i> Send
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#formsTable').DataTable({
                pageLength: 15,
                lengthMenu: [[10,15,25,50,-1],[10,15,25,50,'All']],
                order: [[4, 'desc']],
                columnDefs: [{ targets: [5], orderable: false }],
                dom: '<"hw-dt-toolbar"lf>t<"hw-dt-foot"ip>',
                language: {
                    search: '',
                    searchPlaceholder: 'Search forms…',
                    lengthMenu: 'Show _MENU_ per page',
                    info: 'Showing _START_–_END_ of _TOTAL_ forms',
                    infoEmpty: 'No forms found',
                    zeroRecords: 'No matching forms found',
                    paginate: { previous: '‹', next: '›' }
                }
            });
        });
    </script>
}
