@model List<HWSETA_Impact_Hub.Models.ViewModels.Admin.UserRowVm>
@{
    ViewData["Title"] = "User Management";
}

<style>
    /* Page header actions */
    .hw-page-header {
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        margin-bottom: 24px;
        gap: 16px;
        flex-wrap: wrap;
    }

    .hw-page-eyebrow {
        font-size: 11px;
        font-weight: 700;
        letter-spacing: .1em;
        text-transform: uppercase;
        color: var(--hw-gold-dark);
        margin-bottom: 4px;
    }

    .hw-page-title {
        font-size: 24px;
        font-weight: 800;
        letter-spacing: -.02em;
        color: var(--hw-dark);
        margin: 0;
    }

        .hw-page-title span {
            color: var(--hw-green);
        }

    .hw-page-desc {
        font-size: 13.5px;
        color: var(--hw-muted);
        margin-top: 4px;
    }

    /* Stat strip */
    .hw-stat-strip {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(160px,1fr));
        gap: 14px;
        margin-bottom: 24px;
    }

    .hw-strip-card {
        background: var(--hw-white);
        border: 1.5px solid var(--hw-border);
        border-radius: var(--hw-radius-lg);
        padding: 16px 18px;
        display: flex;
        align-items: center;
        gap: 14px;
    }

    .hw-strip-icon {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        flex-shrink: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 18px;
    }

        .hw-strip-icon.green {
            background: var(--hw-green-light);
            color: var(--hw-green);
        }

        .hw-strip-icon.gold {
            background: var(--hw-gold-light);
            color: var(--hw-gold-dark);
        }

        .hw-strip-icon.red {
            background: var(--hw-red-light);
            color: var(--hw-red);
        }

        .hw-strip-icon.dark {
            background: #f1f2f5;
            color: var(--hw-dark);
        }

    .hw-strip-val {
        font-size: 24px;
        font-weight: 800;
        color: var(--hw-dark);
        letter-spacing: -.02em;
        line-height: 1;
    }

    .hw-strip-label {
        font-size: 11.5px;
        color: var(--hw-muted);
        margin-top: 3px;
    }

    /* Table card */
    .hw-table-card {
        background: var(--hw-white);
        border: 1.5px solid var(--hw-border);
        border-radius: var(--hw-radius-lg);
        overflow: hidden;
    }

    .hw-table-card-head {
        padding: 16px 22px;
        border-bottom: 1px solid var(--hw-border);
        background: var(--hw-offwhite);
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
    }

    .hw-table-card-title {
        font-size: 14px;
        font-weight: 700;
        color: var(--hw-dark);
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .hw-table-card-title i {
            color: var(--hw-green);
        }

    /* DataTable overrides — match HWSETA style */
    .dataTables_wrapper {
        padding: 0;
    }

        .dataTables_wrapper .dataTables_filter label,
        .dataTables_wrapper .dataTables_length label {
            font-size: 12px;
            font-weight: 600;
            color: var(--hw-muted);
            font-family: 'Geist Sans','Segoe UI',sans-serif;
        }

        .dataTables_wrapper .dataTables_filter input,
        .dataTables_wrapper .dataTables_length select {
            border: 1.5px solid var(--hw-border);
            border-radius: 8px;
            padding: 6px 10px;
            font-size: 13px;
            font-family: 'Geist Sans','Segoe UI',sans-serif;
            color: var(--hw-dark);
            outline: none;
            transition: border-color .2s, box-shadow .2s;
        }

            .dataTables_wrapper .dataTables_filter input:focus,
            .dataTables_wrapper .dataTables_length select:focus {
                border-color: var(--hw-green);
                box-shadow: 0 0 0 3px rgba(26,122,60,.1);
            }

        .dataTables_wrapper .dataTables_info,
        .dataTables_wrapper .dataTables_paginate {
            font-size: 12px;
            color: var(--hw-muted);
        }

            /* Pagination */
            .dataTables_wrapper .dataTables_paginate .paginate_button {
                border-radius: 7px !important;
                font-size: 12px !important;
                font-family: 'Geist Sans','Segoe UI',sans-serif !important;
                color: var(--hw-muted) !important;
                border: 1.5px solid transparent !important;
                padding: 5px 10px !important;
                transition: all .18s !important;
            }

                .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
                    background: var(--hw-green-light) !important;
                    border-color: var(--hw-green) !important;
                    color: var(--hw-green) !important;
                }

                .dataTables_wrapper .dataTables_paginate .paginate_button.current {
                    background: var(--hw-green) !important;
                    border-color: var(--hw-green) !important;
                    color: #fff !important;
                }

                .dataTables_wrapper .dataTables_paginate .paginate_button.disabled,
                .dataTables_wrapper .dataTables_paginate .paginate_button.disabled:hover {
                    color: var(--hw-border) !important;
                    border-color: transparent !important;
                    background: transparent !important;
                }

    /* Table */
    .hw-dt {
        width: 100%;
        border-collapse: collapse;
    }

        .hw-dt thead th {
            padding: 11px 16px;
            font-size: 11px;
            font-weight: 700;
            letter-spacing: .07em;
            text-transform: uppercase;
            color: var(--hw-muted);
            border-bottom: 1.5px solid var(--hw-border);
            background: var(--hw-offwhite);
            text-align: left;
            white-space: nowrap;
            cursor: pointer;
        }

            .hw-dt thead th:hover {
                color: var(--hw-green);
            }

            .hw-dt thead th.sorting_asc {
                color: var(--hw-green);
            }

            .hw-dt thead th.sorting_desc {
                color: var(--hw-green);
            }

        .hw-dt tbody tr {
            border-bottom: 1px solid var(--hw-border);
            transition: background .15s;
        }

            .hw-dt tbody tr:last-child {
                border-bottom: none;
            }

            .hw-dt tbody tr:hover {
                background: var(--hw-offwhite);
            }

        .hw-dt td {
            padding: 13px 16px;
            font-size: 13px;
            color: var(--hw-dark);
            vertical-align: middle;
        }

    /* User avatar chip */
    .hw-user-chip {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .hw-user-av {
        width: 34px;
        height: 34px;
        border-radius: 50%;
        flex-shrink: 0;
        background: linear-gradient(135deg, var(--hw-green), var(--hw-green-dark));
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12px;
        font-weight: 800;
        color: #fff;
    }

    .hw-user-email {
        font-size: 13px;
        font-weight: 600;
        color: var(--hw-dark);
    }

    /* Role badge */
    .hw-role-badge {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        padding: 3px 10px;
        border-radius: 99px;
        font-size: 11px;
        font-weight: 700;
        letter-spacing: .03em;
    }

        .hw-role-badge.admin {
            background: #ede9fe;
            color: #6d28d9;
        }

        .hw-role-badge.manager {
            background: var(--hw-gold-light);
            color: var(--hw-gold-dark);
        }

        .hw-role-badge.capture {
            background: #e0f2fe;
            color: #0369a1;
        }

        .hw-role-badge.beneficiary {
            background: var(--hw-green-light);
            color: var(--hw-green);
        }

        .hw-role-badge.default {
            background: var(--hw-offwhite);
            color: var(--hw-muted);
            border: 1px solid var(--hw-border);
        }

    /* Confirmed badge */
    .hw-confirmed-yes {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        font-size: 12px;
        font-weight: 600;
        color: var(--hw-green);
    }

    .hw-confirmed-no {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        font-size: 12px;
        font-weight: 600;
        color: var(--hw-muted);
    }

    /* Action buttons */
    .hw-row-actions {
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .hw-row-btn {
        width: 32px;
        height: 32px;
        border: 1.5px solid var(--hw-border);
        border-radius: 8px;
        background: transparent;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
        color: var(--hw-muted);
        cursor: pointer;
        text-decoration: none;
        transition: all .18s;
    }

        .hw-row-btn:hover {
            border-color: var(--hw-green);
            background: var(--hw-green-light);
            color: var(--hw-green);
        }

        .hw-row-btn.danger:hover {
            border-color: var(--hw-red);
            background: var(--hw-red-light);
            color: var(--hw-red);
        }

    /* Buttons */
    .hw-btn-primary {
        display: inline-flex;
        align-items: center;
        gap: 7px;
        padding: 9px 18px;
        background: var(--hw-green);
        color: #fff;
        border: none;
        border-radius: 8px;
        font-size: 13px;
        font-weight: 700;
        font-family: inherit;
        cursor: pointer;
        text-decoration: none;
        transition: background .2s, box-shadow .2s, transform .15s;
    }

        .hw-btn-primary:hover {
            background: var(--hw-green-dark);
            box-shadow: 0 4px 14px rgba(26,122,60,.3);
            transform: translateY(-1px);
            color: #fff;
        }

    /* DataTable filter/length area padding */
    .hw-dt-toolbar {
        padding: 14px 18px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
        border-bottom: 1px solid var(--hw-border);
    }

    .hw-dt-foot {
        padding: 12px 18px;
        border-top: 1px solid var(--hw-border);
        background: var(--hw-offwhite);
    }
</style>

@* ── Page header ── *@
<div class="hw-page-header">
    <div>
        <div class="hw-page-eyebrow"><i class="bi bi-people me-1"></i>Administration</div>
        <h1 class="hw-page-title">User <span>Management</span></h1>
        <p class="hw-page-desc">Manage staff accounts, roles, and beneficiary access across the system.</p>
    </div>
    <a asp-action="Create" class="hw-btn-primary" style="margin-top:4px;">
        <i class="bi bi-person-plus"></i> Create User
    </a>
</div>

@* ── TempData toast ── *@
@if (TempData["Success"] != null)
{
    <script>
        window.addEventListener('load', function() {
            if (typeof hwToast === 'function') hwToast('success', 'Success', '@TempData["Success"]');
        });
    </script>
}

@* ── Stat strip ── *@
<div class="hw-stat-strip">
    <div class="hw-strip-card">
        <div class="hw-strip-icon dark"><i class="bi bi-people"></i></div>
        <div>
            <div class="hw-strip-val">@Model.Count</div>
            <div class="hw-strip-label">Total Users</div>
        </div>
    </div>
    <div class="hw-strip-card">
        <div class="hw-strip-icon green"><i class="bi bi-patch-check"></i></div>
        <div>
            <div class="hw-strip-val">@Model.Count(u => u.EmailConfirmed)</div>
            <div class="hw-strip-label">Email Confirmed</div>
        </div>
    </div>
    <div class="hw-strip-card">
        <div class="hw-strip-icon gold"><i class="bi bi-clock-history"></i></div>
        <div>
            <div class="hw-strip-val">@Model.Count(u => !u.EmailConfirmed)</div>
            <div class="hw-strip-label">Pending Confirmation</div>
        </div>
    </div>
    <div class="hw-strip-card">
        <div class="hw-strip-icon green"><i class="bi bi-shield-lock"></i></div>
        <div>
            <div class="hw-strip-val">@Model.Select(u => u.Roles).Distinct().Count()</div>
            <div class="hw-strip-label">Distinct Roles</div>
        </div>
    </div>
</div>

@* ── Table card ── *@
<div class="hw-table-card">
    <div class="hw-table-card-head">
        <span class="hw-table-card-title">
            <i class="bi bi-table"></i> All Users
        </span>
        <div style="display:flex;gap:8px;">
            <button class="hw-row-btn" title="Export CSV" onclick="hwExportCsv()" style="width:auto;padding:0 12px;gap:6px;font-size:12px;font-weight:600;">
                <i class="bi bi-file-earmark-excel"></i> Export
            </button>
        </div>
    </div>

    <div style="overflow-x:auto;">
        <table id="hw-users-table" class="hw-dt">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Role</th>
                    <th>Email Confirmed</th>
                    <th style="width:100px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    var initials = string.Concat(
                    (u.Email ?? "").Split(new[] { '@', '.' }, StringSplitOptions.RemoveEmptyEntries)
                    .Take(2).Select(p => p.Length > 0 ? char.ToUpper(p[0]).ToString() : "")
                    );
                    if (initials.Length == 0) initials = "U";

                    var roleClass = u.Roles?.ToLower() switch
                    {
                        var r when r != null && (r.Contains("admin") || r.Contains("super")) => "admin",
                        var r when r != null && r.Contains("manager") => "manager",
                        var r when r != null && (r.Contains("capture") || r.Contains("data")) => "capture",
                        var r when r != null && r.Contains("beneficiary") => "beneficiary",
                        _ => "default"
                    };

                    <tr>
                        <td>
                            <div class="hw-user-chip">
                                <div class="hw-user-av">@initials</div>
                                <div class="hw-user-email">@u.Email</div>
                            </div>
                        </td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(u.Roles))
                            {
                                <span class="hw-role-badge @roleClass">
                                    <i class="bi bi-person-badge"></i> @u.Roles
                                </span>
                            }
                            else
                            {
                                <span style="color:var(--hw-muted);font-size:12px;">No role</span>
                            }
                        </td>
                        <td>
                            @if (u.EmailConfirmed)
                            {
                                <span class="hw-confirmed-yes">
                                    <i class="bi bi-check-circle-fill"></i> Confirmed
                                </span>
                            }
                            else
                            {
                                <span class="hw-confirmed-no">
                                    <i class="bi bi-clock"></i> Pending
                                </span>
                            }
                        </td>
                        <td>
                            <div class="hw-row-actions">
                                <a asp-action="Edit" asp-route-email="@u.Email"
                                   class="hw-row-btn" title="Edit user">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="ResetPassword" asp-route-email="@u.Email"
                                   class="hw-row-btn" title="Reset password">
                                    <i class="bi bi-key"></i>
                                </a>
                                <button class="hw-row-btn danger" title="Delete user"
                                        onclick="hwConfirmDelete('@u.Email')">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @* DataTables *@
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.8/css/jquery.dataTables.min.css" />
    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>

    <script>
        var _hwUsersTable;

        $(document).ready(function () {
            _hwUsersTable = $('#hw-users-table').DataTable({
                pageLength: 15,
                lengthMenu: [[10, 15, 25, 50, -1], [10, 15, 25, 50, 'All']],
                order: [[0, 'asc']],
                columnDefs: [
                    { orderable: false, targets: 3 }   // Actions column not sortable
                ],
                language: {
                    search:         '',
                    searchPlaceholder: 'Search users…',
                    lengthMenu:     'Show _MENU_ users',
                    info:           'Showing _START_–_END_ of _TOTAL_ users',
                    infoEmpty:      'No users found',
                    emptyTable:     'No users have been created yet.',
                    paginate: {
                        previous: '<i class="bi bi-chevron-left"></i>',
                        next:     '<i class="bi bi-chevron-right"></i>'
                    }
                },
                dom: '<"hw-dt-toolbar"lf>t<"hw-dt-foot"ip>',
                buttons: ['csvHtml5']
            });
        });

        function hwExportCsv() {
            _hwUsersTable.button('.buttons-csv').trigger();
        }

        function hwConfirmDelete(email) {
            if (typeof hwToast === 'function') {
                hwToast('warning', 'Not implemented', 'Delete action for ' + email + ' — wire up your controller.');
            }
        }
    </script>
}
