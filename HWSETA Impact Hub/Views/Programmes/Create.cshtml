@model HWSETA_Impact_Hub.Models.ViewModels.Programme.ProgrammeCreateVm
@{
    ViewData["Title"] = "Add Programme";
}

<h1>Add Programme</h1>

<form method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row g-3">
        <div class="col-md-4">
            <label class="form-label">Programme Code (optional)</label>
            <input asp-for="ProgrammeCode" class="form-control" />
        </div>
        <div class="col-md-8">
            <label class="form-label">Programme Name</label>
            <input asp-for="ProgrammeName" class="form-control" />
            <span asp-validation-for="ProgrammeName" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">NQF Level</label>
            <input asp-for="NqfLevel" class="form-control" placeholder="NQF 4" />
        </div>
        <div class="col-md-4">
            <label class="form-label">Qualification Type</label>
            <input asp-for="QualificationType" class="form-control" placeholder="Learnership / Internship" />
        </div>
        <div class="col-md-4">
            <label class="form-label">Duration (months)</label>
            <input asp-for="DurationMonths" class="form-control" />
            <span asp-validation-for="DurationMonths" class="text-danger"></span>
        </div>

        <div class="col-md-12">
            <div class="form-check mt-2">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label">Active</label>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Save</button>
        <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}