@model HWSETA_Impact_Hub.Models.ViewModels.Programme.ProgrammeCreateVm
@{
    ViewData["Title"] = "Add Programme";
}

<h1 class="mb-3">Add Programme</h1>

<form method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="ProgrammeCode" class="form-label">Programme Code (optional)</label>
            <input asp-for="ProgrammeCode" class="form-control" />
            <span asp-validation-for="ProgrammeCode" class="text-danger"></span>
        </div>

        <div class="col-md-8">
            <label asp-for="ProgrammeName" class="form-label">Programme Name</label>
            <input asp-for="ProgrammeName" class="form-control" />
            <span asp-validation-for="ProgrammeName" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="QualificationTypeId" class="form-label">Qualification Type</label>
            <select asp-for="QualificationTypeId" asp-items="Model.QualificationTypes" class="form-select">
                <option value="">-- Select qualification type --</option>
            </select>
            <span asp-validation-for="QualificationTypeId" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="NqfLevel" class="form-label">NQF Level</label>
            <input asp-for="NqfLevel" class="form-control" />
            <span asp-validation-for="NqfLevel" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="Credits" class="form-label">Credits</label>
            <input asp-for="Credits" type="number" class="form-control" />
        </div>

        <div class="col-md-4">
            <label asp-for="DurationMonths" class="form-label">Duration (Months)</label>
            <input asp-for="DurationMonths" type="number" class="form-control" />
        </div>

        <div class="col-md-4">
            <label asp-for="SAQAId" class="form-label">SAQA ID</label>
            <input asp-for="SAQAId" class="form-control" />
        </div>

        <div class="col-md-4">
            <label asp-for="OFOCode" class="form-label">OFO Code</label>
            <input asp-for="OFOCode" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="ProvinceId" class="form-label">Province</label>
            <select asp-for="ProvinceId" asp-items="Model.Provinces" class="form-select">
                <option value="">-- Select Province --</option>
            </select>
            <span asp-validation-for="ProvinceId" class="text-danger"></span>
        </div>


        <div class="col-md-6">
            <div class="form-check mt-4">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label">Active</label>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Save</button>
        <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}