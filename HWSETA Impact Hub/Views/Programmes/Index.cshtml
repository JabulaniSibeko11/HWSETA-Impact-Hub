@model List<HWSETA_Impact_Hub.Domain.Entities.Programme>
@{
    ViewData["Title"] = "Programmes";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Programmes</h1>
    <div class="btn-group">
        <a class="btn btn-outline-secondary" asp-action="DownloadTemplate">Download Excel Template</a>
        <a class="btn btn-outline-secondary" asp-action="Upload">Bulk Upload</a>
        <a class="btn btn-primary" asp-action="Create">Add Programme</a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="table-responsive">
    <table id="programmesTable" class="table table-striped table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Qualification Type</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.ProgrammeCode</td>
                    <td>@p.ProgrammeName</td>
                    <td>@p.QualificationType?.Name</td>
                    <td>
                        @if (p.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Styles {
    <link rel="stylesheet"
          href="https://cdn.datatables.net/1.13.8/css/dataTables.bootstrap5.min.css" />
}

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.8/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#programmesTable').DataTable({
                pageLength: 10,
                lengthMenu: [10, 25, 50, 100],
                order: [[1, 'asc']], // sort by Name
                columnDefs: [
                    { targets: [3], orderable: false } // Status not sortable
                ],
                language: {
                    search: "Search programmes:",
                    lengthMenu: "Show _MENU_ records per page",
                    info: "Showing _START_ to _END_ of _TOTAL_ programmes",
                    infoEmpty: "No programmes found",
                    zeroRecords: "No matching programmes found"
                }
            });
        });
    </script>
}