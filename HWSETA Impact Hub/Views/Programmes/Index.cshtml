@model List<HWSETA_Impact_Hub.Domain.Entities.Programme>
@{
    ViewData["Title"] = "Programmes";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Programmes</h1>
    <div>
        <a class="btn btn-outline-secondary" asp-action="DownloadTemplate">Download Excel Template</a>
        <a class="btn btn-outline-secondary" asp-action="Upload">Bulk Upload</a>
        <a class="btn btn-primary" asp-action="Create">Add Programme</a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>NQF</th>
            <th>Type</th>
            <th>Duration</th>
            <th>Active</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.ProgrammeCode</td>
                <td>@p.ProgrammeName</td>
                <td>@p.NqfLevel</td>
                <td>@p.QualificationType</td>
                <td>@(p.DurationMonths.HasValue ? $"{p.DurationMonths} months" : "")</td>
                <td>@(p.IsActive ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>