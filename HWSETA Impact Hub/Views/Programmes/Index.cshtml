@model List<HWSETA_Impact_Hub.Domain.Entities.Programme>
@{
    ViewData["Title"] = "Programmes";
}

<h1>Programmes</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create Programme</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Cohort</th>
            <th>Province</th>
            <th>Start</th>
            <th>End</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.ProgrammeName</td>
                <td>@p.ProgrammeType</td>
                <td>@p.CohortYear</td>
                <td>@p.Province</td>
                <td>@p.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@p.EndDate.ToString("yyyy-MM-dd")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@p.Id">Details</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@p.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@p.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>